<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

	<display-name>Archetype Created Web Application</display-name>

	<servlet>
		<servlet-name>AddGameServlet</servlet-name>
		<servlet-class>controller.AddGameServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ViewGameServlet</servlet-name>
		<servlet-class>controller.ViewGameServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>UpdateGameServlet</servlet-name>
		<servlet-class>controller.UpdateGameServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>DeleteGameServlet</servlet-name>
		<servlet-class>controller.DeleteGameServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AddGameServlet</servlet-name>
		<url-pattern>/AddGameServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ViewGameServlet</servlet-name>
		<url-pattern>/ViewGameServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>UpdateGameServlet</servlet-name>
		<url-pattern>/UpdateGameServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>DeleteGameServlet</servlet-name>
		<url-pattern>/DeleteGameServlet</url-pattern>
	</servlet-mapping>

</web-app>
